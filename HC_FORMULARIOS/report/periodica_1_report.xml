            <th style="border: 1px solid #000;">CONSUMOS NOCIVOS</th>
            <th style="border: 1px solid #000;">SI</th>
            <th style="border: 1px solid #000;">NO</th>
            <th style="border: 1px solid #000;">TIEMPO DE CONSUMO<br/>(meses)</th>
            <th style="border: 1px solid #000;">CANTIDAD</th>
            <th style="border: 1px solid #000;">EX CONSUMIDOR</th>
            <th style="border: 1px solid #000;">TIEMPO DE ABSTINENCIA<br/>(meses)</th>
            <th style="border: 1px solid #000;">ESTILO</th>
            <th style="border: 1px solid #000;">SI</th>
            <th style="border: 1px solid #000;">NO</th>
