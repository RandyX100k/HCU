                <strong>LUGAR DE NACIMIENTO:</strong> <t t-esc="doc.lugar_nacimiento or ''"/> &#160;&#160;
                <strong>FECHA DE NACIMIENTO:</strong> <t t-esc="doc.fecha_nacimieto or ''"/> &#160;&#160;
                <strong>INSTRUCCIÓN Y PROFESIÓN:</strong> <t t-esc="doc.instruccion_id.name or ''"/> &#160;&#160;
                <strong>OCUPACIÓN ACTUAL:</strong> <t t-esc="doc.ocupacion_id.name or ''"/> &#160;&#160;
                <strong>CELULAR:</strong> <t t-esc="doc.tel or ''"/>
