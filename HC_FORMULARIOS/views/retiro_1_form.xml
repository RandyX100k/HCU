<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="retiro_1_form_view" model="ir.ui.view">
        <field name="name">retiro.1.form</field>
        <field name="model">retiro.1</field>
        <field name="arch" type="xml">
            <form string="Formulario de Retiro">
                <header>
                  <button
                    name="%(action_report_retiro_1)d"
                    type="action"
                    string="Imprimir Evaluación"
                    class="btn-primary"
                    icon="fa-print"
                  />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <field name="reintegro_id"/>
                        <group>
                            <separator string="Datos del Paciente" colspan="2"/>
                            <field name="primer_apellido"/>
                            <field name="segundo_apellido"/>
                            <field name="primer_nombre"/>
                            <field name="segundo_nombre"/>
                            <field name="sexo"/>
                            <field name="fecha_inicio"/>
                            <field name="fecha_salida"/>
                            <field name="tiempo"/>
                            <field name="puesto_trabajo_id"/>
                        </group>

                        <group>
                            <separator string="Datos de la Empresa / Institución" colspan="2"/>
                            <field name="institucion_name"/>
                            <field name="ruc"/>
                            <field name="ciiu"/>
                            <field name="establecimiento_salud"/>
                            <field name="historia_clinica"/>
                            <field name="numero_archivo"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Antecedentes">
                            <group>
                                <group>
                                    <field name="antecedentes_clinicos"/>
                                    <field name="antecedentes_quirurgicos"/>
                                    <field name="antecedentes_trauma"/>
                                </group>
                                <group>
                                    <field name="antecedentes_hospitalizacion"/>
                                    <field name="antecedentes_alergias"/>
                                </group>
                            </group>
                        </page>

                        <page string="Accidente Laboral">
                            <group>
                                <group>
                                    <field name="descripcion_accidente"/>
                                    <field name="calificado_accidente"/>
                                </group>
                                <group>
                                     <field name="especificacion_accidente"/>
                                    <field name="fecha_accidente"/>
                                </group>
                            </group>
                        </page>

                        <page string="Enfermedad Profesional">
                            <group>
                                <group>
                                    <field name="descripcion_enfermedad"/>
                                    <field name="calificado_enfermedad"/>
                                </group>
                                <group>
                                    <field name="especificacion_enfermedad"/>
                                    <field name="fecha_enfermedad"/>
                                </group>
                            </group>
                        </page>

                        <page string="Constantes Vitales">
                            <group>
                                <group>
                                    <field name="presion_arterial"/>
                                    <field name="temperatura"/>
                                    <field name="frecuencia_cardiaca"/>
                                    <field name="saturacion_oxigeno"/>
                                    <field name="frecuencia_respiratoria"/>
                                </group>
                                <group>
                                    <field name="peso"/>
                                    <field name="talla"/>
                                    <field name="indice_masa_corporal"/>
                                    <field name="perimetro_abdominal"/>
                                </group>
                            </group>
                        </page>

                        <page string="Observaciones de Examen">
                            <group>
                                <field name="observaciones_examen"/>
                            </group>
                        </page>

                        <page string="Factores de Riesgo">
                            <field name="factores_ids">
                                <list editable="bottom">
                                    <field name="actividad"/>
                                    <field name="factores_riesgos_id"/>
                                </list>
                            </field>
                        </page>

                        <page string="Examen Físico Regional">
                            <field name="examen_region_ids">
                                <list editable="bottom">
                                    <field name="type_region"/>
                                    <field name="type_subregion"/>
                                    <field name="patologia"/>
                                    <field name="descripcion"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
