<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_periodica_2" model="ir.ui.view">
    <field name="name">periodica.2.form</field>
    <field name="model">periodica.2</field>
    <field name="arch" type="xml">
      <form string="Evaluación Médica Periódica">
         <header>
           <button
                   name="%(action_report_certificado_desde_periodica_2)d"
                    type="action"
                    string="Imprimir Evaluación"
                    class="btn-primary"
                    icon="fa-print"
                  />
                </header>
        <sheet>
            <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1" class="text-primary"/>
                    </h1>
            </div>
          <group>
            <group>
              <field name="periodica_1_id"/>
              <field name="fecha_datos"/>
            </group>
            <group>
              <field name="hora"/>
            </group>
          </group>

          <notebook>

            <!-- A. Evaluación Clínica -->
            <page string="Evaluación Clínica">
              <group string="Enfermedad Actual">
                <field name="enfermedad_actual"/>
                <field name="refiere"/>
              </group>

              <separator string="Signos Vitales"/>
              <group>
                <group>
                  <field name="presion_arterial"/>
                  <field name="temperatura"/>
                  <field name="frecuencia_cardiaca"/>
                </group>
                <group>
                  <field name="saturacion_oxigeno"/>
                  <field name="frecuencia_respiratoria"/>
                </group>
              </group>

              <separator string="Datos Antropométricos"/>
              <group>
                <group>
                  <field name="peso"/>
                  <field name="talla"/>
                </group>
                <group>
                  <field name="indice_masa_corporal"/>
                  <field name="perimetro_abdominal"/>
                </group>
              </group>
            </page>

            <!-- B. Exploración Física -->
            <page string="Exploración Física">
              <notebook>
                <page string="Órganos y Sistemas">
                  <field name="organos_sistemas_ids" mode="list">
                    <list editable="bottom">
                      <field name="organo_sistema_"/>
                      <field name="patologia"/>
                    </list>
                    <form>
                      <group>
                        <field name="organo_sistema_"/>
                        <field name="patologia"/>
                      </group>
                    </form>
                  </field>
                </page>

                <page string="Examen Físico Regional">
                  <field name="examen_region_ids" mode="list">
                    <list editable="bottom">
                      <field name="type_region"/>
                      <field name="type_subregion"/>
                      <field name="patologia"/>
                      <field name="descripcion"/>
                    </list>
                  </field>
                </page>

                <page string="Columna y Extremidades">
                  <field name="columna_extremidades_ids" mode="list">
                    <list editable="bottom">
                      <field name="signos_ids"/>
                      <field name="patologia"/>
                      <field name="descripcion"/>
                    </list>
                    <form>
                      <group>
                        <field name="signos_ids"/>
                        <field name="patologia"/>
                        <field name="descripcion"/>
                      </group>
                    </form>
                  </field>
                </page>
              </notebook>
            </page>

            <!-- C. Exámenes Complementarios -->
            <page string="Exámenes Complementarios">
              <field name="resultado_examen_ids">
                <list editable="bottom">
                  <field name="examen_id"/>
                  <field name="fecha"/>
                  <field name="resultado"/>
                </list>
              </field>
               <separator string="Observaciones"/>
                 <group>
                   <field name="observaciones"/>
                 </group>
            </page>

            <!-- D. Evaluación Final -->
            <page string="Evaluación Final">
              <notebook>
                <page string="Diagnóstico">
                  <field name="examens_diagnosticos_ids">
                    <list editable="bottom">
                      <field name="cie_id"/>
                      <field name="motivo"/>
                      <field name="pref"/>
                      <field name="def_"/>
                    </list>
                    <form>
                      <group>
                        <field name="cie_id"/>
                        <field name="motivo"/>
                        <field name="pref"/>
                        <field name="def_"/>
                      </group>
                    </form>
                  </field>
                </page>

                <page string="Aptitud Médica">
                  <field name="aptidudes_medicas_ids">
                    <list editable="bottom">
                      <field name="apto"/>
                      <field name="apto_observacion"/>
                      <field name="apto_limitaciones"/>
                      <field name="no_apto"/>
                      <field name="observacion"/>
                      <field name="limitacion"/>
                    </list>
                  </field>
                </page>

                <page string="Recomendaciones">
                  <field name="recomendaciones_ids">
                    <list editable="bottom">
                      <field name="recomendacion"/>
                    </list>
                  </field>
                </page>
              </notebook>
            </page>

            <!-- E. Profesional -->
            <page string="Profesional">
              <group>
                <group>
                  <field name="profesional_id"/>
                  <field name="codigo"/>
                </group>
                <group>
                  <field name="firma_sello" widget="image"/>
                  <field name="firma_user" widget="image"/>
                </group>
              </group>
            </page>

          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
