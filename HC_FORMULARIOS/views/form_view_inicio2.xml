<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_form_inicio_2" model="ir.ui.view">
        <field name="name">inicio.2.form</field>
        <field name="model">inicio.2</field>
        <field name="arch" type="xml">
            <form string="Formulario de Historia Clínica - Parte 2">
                <header>
                  <button
                    name="%(action_report_inicio_2)d"
                    type="action"
                    string="Imprimir Evaluación"
                    class="btn-primary"
                    icon="fa-print"
                  />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" class="text-primary"/>
                        </h1>
                    </div>
                    <group>
                        <field name="form_01_id"/>
                    </group>

                    <group>
                        <field name="enfermedad_actual"/>
                    </group>

                    <notebook>
                        <page string="Antecedentes Familiares">
                            <group>
                                <group>
                                    <field name="enfermedad_cardio"/>
                                    <field name="enfermedad_metabolidca"/>
                                    <field name="enfermedad_neurologica"/>
                                    <field name="enfermedad_oncologica"/>
                                </group>
                                <group>
                                    <field name="enfermedad_infecciosa"/>
                                    <field name="enfermedad_hereditaria"/>
                                    <field name="discapacidad"/>
                                    <field name="otra_enfermedad"/>
                                </group>
                            </group>
                            <separator string="Refiere"/>
                            <group>
                                <field name="refiere"/>
                            </group>
                        </page>

                        <page string="Factores de riesgos 1">
                            <field name="riesgos_ids">
                                <list editable="bottom">
                                    <field name="puesto_id"/>
                                    <field name="actividades"/>
                                    <field name="typo_riesgos"/>
                                    <field name="riesgo"/>
                                </list>
                            </field>
                        </page>

                        <page string="Factores de riesgos 2">
                            <field name="riesgos_ids_2">
                                <list editable="bottom">
                                    <field name="puesto_id"/>
                                    <field name="actividades"/>
                                    <field name="typo_riesgos"/>
                                    <field name="riesgo"/>
                                    <field name="medidas_preventiva"/>
                                </list>
                            </field>
                        </page>
                        <page string="Actividad extra laborales">
                            <field name="actividades_extras_laborales">
                                <list editable="bottom">
                                    <field name="actividad"/>
                                </list>
                            </field>
                        </page>
                        <!--organos sistemas-->
                        <page string="Revision de organos">
                            <field name="organos_sistemas_ids">
                                <list editable="bottom">
                                    <field name="organo_sistema_"/>
                                    <field name="patologia"/>
                                </list>
                            </field>
                            <group>
                                <field name="observacion_organos"/>
                            </group>
                        </page>

                        <page string="Constantes vitales">
                            <group>
                                <group>
                                    <field name="presion_arterial"/>
                                    <field name="temperatura"/>
                                    <field name="frecuencia_cardiaca"/>
                                    <field name="saturacion_oxigeno"/>
                                </group>

                                <group>
                                    <field name="frecuencia_respiratoria"/>
                                    <field name="peso"/>
                                    <field name="talla"/>
                                    <field name="indice_masa_corporal"/>
                                    <field name="perimetro_abdominal"/>
                                </group>
                            </group>
                        </page>


                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
